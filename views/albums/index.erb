<% @page_title = "All Albums" %>

<a href="/albums/new">Add Album</a>

<% @albums.each do |album| %>
  <p><%= album.title %> (by <%= album.artist.name %>)</p>
  <a href="/albums/<%= album.id %>/edit">Edit</a>
  <form action="/albums/<%= album.id %>/delete" method="post">
    <input type="submit" value="Delete">
  </form>
<% end %>