<h3>Edit Album</h3>

<form action="/albums/<%= @album.id %>" method="post">

  <label for="artist_id"></label>
  <select name="artist_id">
    <% @artists.each do |artist| %>
      <option value="<%= artist.id %>" <%= 'selected' if artist.id == @album.artist_id %>><%= artist.name %></option>
    <% end %>
  </select>

  <label for="title">Title:</label>
  <input type="text" name="title" value="<%= @album.title %>">

  <input type="submit" value="Edit Album">
</form>