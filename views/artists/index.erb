<% @page_title = "All Artists" %>

<a href="/artists/new">Add Artist</a>
<hr>

<% @artists.each do |artist| %>
  <p><%= artist.name %></p> 
  <p><a href="/artists/<%= artist.id %>/edit">Edit</a></p>
  <form action="/artists/<%= artist.id %>/delete" method="post">
    <input type="submit" value="Delete">
  </form>
  <hr>
<% end %>

